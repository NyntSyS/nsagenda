<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context=".FragmentModifyTask">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">


        <com.libizo.CustomEditText
            android:id="@+id/fModifyTask_et_nombreTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Nombre de la tarea"
            android:inputType="text"
            android:maxLength="40"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:text=""
            android:textSize="15sp"
            app:libIZO_setBorderColor="#d4d2d3"
            app:libIZO_setBorderView="true"
            app:libIZO_setClearIconVisible="true"
            app:libIZO_setCornerRadius="20dp" />

        <com.libizo.CustomEditText
            android:id="@+id/fModifyTask_et_descripcionTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="DescripciÃ³n de la tarea"
            android:inputType="text"
            android:maxLength="250"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:text=""
            android:textSize="15sp"
            app:libIZO_setBorderColor="#d4d2d3"
            app:libIZO_setBorderView="true"
            app:libIZO_setClearIconVisible="true"
            app:libIZO_setCornerRadius="20dp" />

        <LinearLayout
            android:id="@+id/fModifyTask_LY_elegirFecha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingTop="20dp"
            android:paddingRight="7dp">

            <Button
                android:id="@+id/fModifyTask_b_elegirFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Fecha" />

            <TextView
                android:id="@+id/fModifyTask_tv_mostrarFecha"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

            <Button
                android:id="@+id/fModifyTask_b_elegirHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button2"
                android:text="Hora" />

            <TextView
                android:id="@+id/fModifyTask_tv_mostrarHora"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/fModifyTask_tv_Color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="6dp"
            android:layout_marginTop="15dp"
            android:text="Selecciona color:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"

            android:paddingRight="7dp">

            <com.llollox.androidtoggleswitch.widgets.ToggleSwitch
                android:id="@+id/fModifyTask_mts_ToggleSwitchColores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:borderRadius="8dp"
                app:borderWidth="2dp" />
        </LinearLayout>

        <Button
            android:id="@+id/fModifyTask_b_UpdateTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar tarea" />

    </LinearLayout>

</ScrollView>